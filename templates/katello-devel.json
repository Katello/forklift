{
    "variables": {
        "user": "vagrant",
        "password": "vagrant"
   },

    "builders":
    [
        {
            "name": "katello-devel",
            "type": "qemu",
            "format": "qcow2",
            "accelerator": "kvm",
            "headless": true,
            "iso_url": "http://mirrors.mit.edu/centos/7/isos/x86_64/CentOS-7-x86_64-Minimal-1810.iso",
            "iso_checksum_type": "sha256",
            "iso_checksum": "38d5d51d9d100fd73df031ffd6bd8b1297ce24660dc8c13a3b8b4534a4bd291c",
            "http_directory": "http",
            "ssh_username": "{{user `user`}}",
            "ssh_password": "{{user `password`}}",
            "ssh_wait_timeout": "20m",
            "http_directory": "http",
            "boot_wait": "2s",
            "shutdown_command": "echo 'vagrant' | sudo -S /sbin/halt -h -p",
            "qemuargs": [
                [ "-m", "8192M" ]
            ],
            "boot_command": [
              "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"
            ]
        }
    ],

    "provisioners": [
        {
            "type": "ansible",
            "playbook_file": "../playbooks/katello_devel.yml",
            "ansible_env_vars": [ "ANSIBLE_CONFIG=../ansible.cfg" ]
        }
    ],

    "post-processors": [
        {
            "type": "vagrant",
            "keep_input_artifact": false,
            "output": "forklift-centos7-katello-devel.box"
        }
    ]
}
