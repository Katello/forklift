#! /bin/bash -e

# Enabling collections
. /opt/rh/rh-ruby24/enable

# Clean up tasks
rm -rf /${HOME}/{.bundle,.npm*} /var/cache/yum webpack node_modules test tmp/*

yum -y history undo `yum history package make |grep Install | awk '{print $1}'`

# ensure that yum history undo didn't downgrade any package.
yum -y upgrade

bundle clean --force
bundle config --global frozen 1
