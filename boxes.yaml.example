---
centos7-devel:
  box: centos7
  ansible:
    playbook: 'ansible/playbooks/devel.yml'
    group: 'devel'
    variables:
      katello_devel_github_username: <REPLACE ME>

katello-remote-execution:
  box: centos7-katello-nightly
  installer: --enable-foreman-remote-execution

centos7-proxy-devel:
    box: centos7
    ansible:
      playbook: 'ansible/playbooks/foreman_proxy_content_dev.yml'
      group: 'foreman-proxy-content'
      server: 'centos7-devel'

katello-client:
  box: centos7
  ansible:
    playbook: 'ansible/playbooks/katello_client.yml'
    group: 'client'
    server: 'centos7-devel'

